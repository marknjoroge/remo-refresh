{
    "manifest_version": 2,
    "name": "Auto Refresh Extension",
    "version": "1.0",
    "description": "Refreshes the page if the specified class has text '0'",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "web_accessible_resources": [
        "assets/music/alarm.mp3"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.remotasks.com/en/tasks",
                "https://www.remotasks.com/tasks"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}